# Application
APP_NAME=FinSightAI
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars-required
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=finsight
POSTGRES_USER=finsight_user
POSTGRES_PASSWORD=secure_password
DATABASE_URL=postgresql://finsight_user:secure_password@localhost:5432/finsight

# Database - NebulaGraph
NEBULA_HOST=localhost
NEBULA_PORT=9669
NEBULA_USER=root
NEBULA_PASSWORD=nebula
NEBULA_SPACE=finsight
NEBULA_POOL_SIZE=10

# Database - Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_TIMEOUT=120

# Storage - MinIO/S3
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=finsight-documents
S3_REGION=us-east-1
S3_USE_SSL=false

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# LLM - OpenAI
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# OCR
TESSERACT_PATH=tesseract
TESSERACT_LANG=eng
PADDLEOCR_LANG=en
PADDLEOCR_USE_GPU=false

# Document Processing
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=500
CHUNK_OVERLAP=100
MIN_CHUNK_SIZE=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Observability
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=finsight-ai
LANGSMITH_TRACING=false

# Security
HIPAA_MODE=true
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-base64
PASSWORD_MIN_LENGTH=12

# Workers
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Feature Flags
ENABLE_FRAUD_DETECTION=true
ENABLE_GRAPH_REASONING=true
ENABLE_COMPLIANCE_CHECK=true
